<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/control"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/control"
        android:name="com.example.smarthome.ui.control.ControlFragment"
        android:label="@string/control"
        tools:layout="@layout/fragment_control" />

    <fragment
        android:id="@+id/camera"
        android:name="com.example.smarthome.ui.camera.CameraFragment"
        android:label="@string/camera"
        tools:layout="@layout/fragment_camera" />
    <fragment
        android:id="@+id/chatbot"
        android:name="com.example.smarthome.ui.chatbot.ChatBotFragment"
        android:label="@string/chatbot"
        tools:layout="@layout/fragment_chat_bot" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.smarthome.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />


</navigation>